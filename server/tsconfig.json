{
  "compilerOptions": {
    "baseUrl": "./",
    "incremental": true,
    "target": "ES2023",
    "lib": ["ESNext"],
    "module": "ESNext",
    "paths": {
      "@/*": ["src/*"],
    },
    "outDir": "./dist",
    "noEmitOnError": true, 
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
